{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "strict": true,
    "outDir": "dist"
  },
  "exclude": [
    "jest.config.ts",
    "**/test/**/*.ts"
  ]
}